@model dynamic 
@using eManager.Web.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@ExtensionsLibrary.Test(Model)*@

<h2>Generic Test</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @*TODO: Handle Identity for POST  e.g. @Html.HiddenFor(Model => Model.PK)*@
    <fieldset>
        @foreach (var property in Model.GetType().GetProperties())
        {
            <div class="editor-label">
                @Html.Label((string)property.Name)
            </div>
            <div class="editor-field">
                @Html.Editor((string)property.Name)
                @Html.ValidationMessage((string)property.Name, (string)null)
            </div>
        }
        <button type="submit">Submit</button>
    </fieldset>
}

@{
    ViewBag.Title = "Generic Test";
}